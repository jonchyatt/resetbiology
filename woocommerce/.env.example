# WooCommerce Store Environment Variables
# Copy this to .env and fill in your actual Stripe keys

# Stripe Integration (use same account as main site)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# WordPress Admin Credentials
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=YourSecurePassword123!
WP_ADMIN_EMAIL=your@email.com

# Site URLs (change for production)
SITE_URL=http://localhost:8080
ADMIN_URL=http://localhost:8080/wp-admin

# Database (managed by Docker - don't change these)
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_HOST=db:3306
